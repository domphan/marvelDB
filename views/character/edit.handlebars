<div class="container-fluid">
  <header class="jumbotron">
    <h1>EDIT</h1>
    {{#if contextSingleHero}}
      <h1>{{contextSingleHero.hero.moniker}}</h1>
      {{else}}
        <h1>{{contextSingleVillain.villain.villain_moniker}}</h1>
    {{/if}}
  </header>
</div>
<!--  -->
<div class="container">
  <div class="row">
    <form class="" action="/character/{{#if contextSingleHero}}hero/{{contextSingleHero.hero.id}}{{else}}villain/{{contextSingleVillain.villain.id}}{{/if}}/?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="moniker" value="{{contextSingleHero.hero.moniker}}{{contextSingleVillain.villain.villain_moniker}}" placeholder="moniker" required>
      </div>
      <div class="form-group">
        <label for="powers">Powers:</label>
        <textarea  style="margin-bottom: 15px;" name="powers" id="powers" rows="5" class="form-control">{{contextSingleHero.hero.powers}}{{contextSingleVillain.villain.powers}}</textarea>
      <div class="form-group">
        <label for="firstname">First name:</label>
        <input class="form-control" type="text" name="firstname" value="{{contextSingleHero.hero.first_name}}{{contextSingleVillain.villain.first_name}}" placeholder="first name">
      </div>
      <div class="form-group">
        <label for="lastname">Last name:</label>
        <input class="form-control" type="text" name="lastname" value="{{contextSingleHero.hero.last_name}}{{contextSingleVillain.villain.last_name}}" placeholder="last name">
      </div>
      <div class="form-group">
        <label for="planet">Planet:</label>
        <select class="form-control" id="planet" name="planet">
          {{#each contextAll.planets}}
            <option value="{{id}}">{{planet_name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="series">Originating Series:</label>
        <select class="form-control" id="series" name="series">
          {{#each contextAll.series}}
            <option value="{{id}}">{{series_name}} ({{year}})</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <input type="submit" name="" value="Submit">
      </div>
    </form>
  </div>
</div>
